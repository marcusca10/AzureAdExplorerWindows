<Window x:Class="AzureAdExplorerWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AzureAdExplorerWindows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="165" ItemsSource="{Binding AuthModeList}" SelectedValue="{Binding SelectedAuthMode}"/>
        <Button Content="{Binding LoginText}" Margin="192,10,0,0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="103" Command="{Binding Path=LoginCommand}"/>
        <TextBox Margin="10,65,10,10" Text="{Binding ResultText}" TextWrapping="Wrap"/>
    </Grid>
</Window>
